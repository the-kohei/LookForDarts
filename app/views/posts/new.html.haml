= render 'shared/header'
#account-page.account-page
  .account-page__inner.clearfix
    .account-page__inner--left.account-page__header
      %h2 口コミ投稿
    .account-page__inner--right.user-form
      = form_for(@post) do |f|
        .field
          .field-label
            = f.label :タイトル
            %i (必須)
          .field-input
            = f.text_field :title
        .field
          .field-label
            = f.label :ダーツ種類
            %i (必須)
          .field-input
            -# = f.collection_select(:category_id, @categorys, :id, :name )
        .field
          .field-label
            = f.label :メーカー
          .field-input
            -# = f.collection_select(:maker_id, @makers, :id, :name )
        .field
          .field-label
            = f.label :詳細
          .field-input
            = f.text_area :text, size: "30x5"
        .actions
          = f.submit "投稿", class: 'btn'
